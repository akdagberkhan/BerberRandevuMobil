<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KaydolActivity">

    <TextView
        android:id="@+id/textView11Kaydol2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:text="Kayıt ol"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/textView10Kaydol2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textView10Kaydol2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="@+id/gridLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_applogo" />

    <TextView
        android:id="@+id/textView10Kaydol2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Randevu"
        android:textColor="#232323"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <Button
        android:id="@+id/btn_KayitOl"
        android:layout_width="270dp"
        android:layout_height="55dp"

        android:layout_marginTop="5dp"
        android:backgroundTint="@color/ozel1"
        android:text="Kayıt Ol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSecilenKaydol" />

    <TextView
        android:id="@+id/txtGirisYap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="GİRİŞ YAP"
        android:textColor="#131313"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView3Kaydol"
        app:layout_constraintEnd_toEndOf="@+id/btn_KayitOl"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toEndOf="@+id/textView3Kaydol"
        app:layout_constraintTop_toTopOf="@+id/textView3Kaydol" />

    <TextView
        android:id="@+id/textView3Kaydol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Zaten Hesabın Var mı?"
        android:textColor="#1C1B1B"
        app:layout_constraintEnd_toEndOf="@+id/btn_KayitOl"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_KayitOl"
        app:layout_constraintTop_toBottomOf="@+id/btn_KayitOl" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="389dp"
        android:layout_height="306dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11Kaydol2">

        <TextView
            android:id="@+id/textViewKaydol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ad ve Soyad"
            android:textColor="#1C1B1B"
            android:textSize="12sp"
            app:layout_column="0"
            app:layout_row="0" />

        <EditText
            android:id="@+id/edtTxtAdSoyadKaydol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="..."
            android:inputType="textPersonName"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textView7Kaydol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email adresi"
            android:textColor="#1C1B1B"
            android:textSize="12sp"
            app:layout_column="0"
            app:layout_row="2" />

        <EditText
            android:id="@+id/edtTxtEmailKaydol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="..."
            android:inputType="textEmailSubject"
            app:layout_column="0"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textView14Kaydol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kullanıcı Adı"
            android:textColor="#1C1B1B"
            android:textSize="12sp"
            app:layout_column="0"
            app:layout_row="4" />

        <EditText
            android:id="@+id/edtTxtKuladKaydol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="..."
            android:inputType="textPersonName"
            app:layout_column="0"
            app:layout_row="5" />

        <TextView
            android:id="@+id/textView9Kaydol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Şifre"
            android:textColor="#1C1B1B"
            android:textSize="12sp"
            app:layout_column="0"
            app:layout_row="6" />

        <EditText
            android:id="@+id/edtTxtSifreKaydol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="..."
            android:inputType="textPassword"
            app:layout_column="0"
            app:layout_row="7" />

        <TextView
            android:id="@+id/textView10Kaydol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefon"
            android:textColor="#1C1B1B"
            android:textSize="12sp"
            app:layout_column="0"
            app:layout_row="8" />

        <EditText
            android:id="@+id/edtTxtTelefonKaydol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="555-555-55-55"
            android:inputType="phone"
            android:maxLength="10"
            app:layout_column="0"
            app:layout_row="9" />
    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/btnFotoSecKaydol"
        android:layout_width="81dp"
        android:layout_height="42dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:onClick="resimSecTikla"
        android:text="Seç..."
        android:textSize="12sp"
        android:backgroundTint="@color/ozel1"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toEndOf="@+id/textViewKaydol2"
        app:layout_constraintTop_toBottomOf="@+id/textViewKaydol2" />

    <ImageView
        android:id="@+id/imgSecilenKaydol"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toEndOf="@+id/btnFotoSecKaydol"
        app:layout_constraintTop_toBottomOf="@+id/textViewKaydol2"
        tools:srcCompat="@drawable/defaultkaydol" />

    <TextView
        android:id="@+id/textViewKaydol2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Profil Fotoğrafı"
        android:textColor="#1C1B1B"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/gridLayout"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>